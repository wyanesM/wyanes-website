import pandas as pd
import matplotlib.pyplot as plt
import seaborn as sns
# Rutas a tus archivos procesados
path_edu =r"C:\Users\wyane\OneDrive\Escritorio\WebPage\data\_processed\resumen\_educacion.csv"
path_tic =r"C:\Users\wyane\OneDrive\Escritorio\WebPage\data\_processed\resumen\_tic_completo.csv"
df_edu = pd.read_csv(path_edu)
df_tic = pd.read_csv(path_tic)
#| label: fig-educacion
#| fig-cap: "Distribución del Nivel Educativo por Departamento"
#| fig-width: 10
#| fig-height: 7
# Limpieza rápida para el gráfico
df_plot_edu = df_edu.pivot(index='Nombre_Depto', columns='Nivel_Educativo', values='Conteo').fillna(0)
df_pct = df_plot_edu.div(df_plot_edu.sum(axis=1), axis=0) * 100
df_pct = df_pct.sort_values(by='Superior', ascending=True)
df_pct.plot(kind='barh', stacked=True, figsize=(10, 7),
color=sns.color_palette("viridis", len(df_pct.columns)))
plt.title("Nivel Educativo Alcanzado por Departamento")
plt.xlabel("Porcentaje")
plt.legend(bbox_to_anchor=(1.05, 1), loc='upper left')
plt.show()
